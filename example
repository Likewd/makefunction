<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1 id="number">0</h1> //this is container which increase when u click button 
    <button >clcik me</button>//this is button  
</body>
<script>
var number =document.querySelector("#number"); //varibale which reference <h1>
var btn =document.querySelector("button"); //varibale which reference <Button>
var counter=0; //variable 
//  CLick event when u click on button then this part of the program run
btn.addEventListener("click",function(){  
counter++;//increase the vaue of counter varialbe , simple syntax counte = counte+1;
number.innerHTML = counter;//insert updated value of variable of counter in <h1> 
})
</script>
</html>
